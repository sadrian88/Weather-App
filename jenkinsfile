pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm // Checks out the source code from your GitHub repository
            }
        }

        stage('Run Tests') {
    steps {
        echo 'Running tests...'
        script {
            // Run ESLint for JavaScript linting
            sh 'npx eslint "**/*.js"'
            // Run Stylelint for CSS linting
            sh 'npx stylelint "**/*.css"'
            // Run HTMLHint for HTML linting
            sh 'npx htmlhint "**/*.html"'
        }
    }
}       
 
    post {
        always {
            echo 'Pipeline execution completed.'
        }

        success {
            echo 'Pipeline completed successfully!'
            // Actions to perform on success, like notifications
        }

        failure {
            echo 'Pipeline failed.'
            // Actions to perform on failure, like notifications
        }
    }
}
