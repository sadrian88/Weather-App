
pipeline {
    agent any

    environment {
        IMAGE_NAME = 'weather-app'
        IMAGE_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Assuming Docker is installed on the Jenkins agent
                    sh "docker build -t ${weather-app}:${latest} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker registry if needed
                    sh "docker login -u adrian21071988 -p Sagemv65#"
                    // Push the image
                    sh "docker push ${weather-app}:${latest}"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Set up kubectl if needed
                    // Apply the Kubernetes deployment
                    sh "kubectl apply -f k8s-deployment.yaml"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}
